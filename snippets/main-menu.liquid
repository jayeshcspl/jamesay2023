            {% endif %}
            <li><a href="/pages/sustainability">{{ 'general.header.sustainability' | t }}</a></li>
            <li><a href="/pages/follow-the-sun">{{ 'general.header.followthesun' | t }}</a></li>
            {% if request.host != "wholesale.jamesay.com" %}
              <!-- <li><a href="/pages/become-a-retailer">{{ 'general.header.become_a_retailer' | t }}</a></li> -->
              <li><a href="https://www.dropbox.com/sh/my4y9hfkvcmrk86/AACPYfCYsM7W1vpZfkX90jn_a?dl=0" target="_blank">{{ 'general.header.press' | t }}</a></li>
            {% endif %}
            <li><a href="/pages/terms-conditions">{{ 'general.header.terms_and_conditions' | t }}</a></li>
            <li class="d-none"><a href="/pages/contact">{{ 'general.header.customer_service' | t }}</a></li>
            <li class="join_newsletter">{{ 'general.header.join_newsletter' | t }}</li>
            <li><a href="/pages/contact"  class="menu_contact1" >{{ 'general.header.contact' | t }}</a></li>
