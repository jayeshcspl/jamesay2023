<nav class="main_menu">
  <div class="row h-100 align-items-stretch no-gutters">

    <div class="col-lg-6 d-lg-flex flex-column justify-content-between">
      <div class="row no-gutters">
        <div class="col content-vcenter1">
          <ul id="menu">
            {% for link in linklists.main-menu.links %}
              {% assign child_list_handle = link.title | handleize %}
              {% if linklists[child_list_handle].links != blank %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                <ul id="sub_menu">
                [{% for childlink in linklists[child_list_handle].links %}
                  <li><a class="fs120" href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
                {% endfor %}]
                </ul>
              {% else %}
                <li><a class="fs120 menu_{{link.handle}}" href="{{ link.url }}" rel="p{{ forloop.index }}">{{ link.title }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="row fix-bottom">
        <div class="col-lg-4 contact-track-ord">
          <ul>
            <li><a href="/blogs/stories/jamesayxnorthside">James Ay x Northside</a></li>
