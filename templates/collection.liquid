            {% assign default_collection = "All,Female,Gender Neutral,Lifestyle,Male,Alle,KÃ¸nsneutral,Kvinde,Livsstil,Mand" | split:"," %}
            {% for collection1 in collections  %}
            <!-- {{ collection1.url }} -->
              {% if default_collection contains collection1.title %}
                {% if collection1.title == collection.title %}
